<header>
  <h1> index page </h1>
</header>

<% @profiles.each do |profile| %>
  <%= link_to image_tag(profile.profile_pic_url), profile_path(profile) %>
<% end %>


<div class="book-form">
<%= form_for (@profile) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :gender %>
  <%= f.text_field :gender %>

  <%= f.label :age %>
  <%= f.text_field :age %>

  <%= f.label :location %>
  <%= f.text.field :location %>

  <%= f.label :work %>
  <%= f.text.field :work %>

  <%= f.label :school %>
  <%= f.text.field :school %>

  <%= f.label :description %>
  <%= f.text.field :description %>

  <%= f.label :profile_pic_url %>
  <%= f.text.field :profile_pic_url %>

  <%= f.label :work %>
  <%= f.text.field :work %>

  <%= f.submit "Submit" %>
<% end %>
</div>
